@using MauiSherpa.Core.Interfaces
@inject ICopilotContextService ContextService
@inject ICopilotService CopilotService
@inject IPlatformService PlatformInfo
@implements IDisposable

@* Floating Copilot Button - hidden when native toolbar has copilot button (Windows/macOS/Linux) *@
<button class="copilot-fab @(isOpen ? "overlay-open" : "") @(PlatformInfo.HasNativeToolbar ? "fab-hidden" : "") @(!PlatformInfo.IsMacCatalyst && !PlatformInfo.IsWindows && !PlatformInfo.IsMacOS ? "fab-linux" : "")" 
        @onclick="ToggleOverlay"
        title="@(isOpen ? "Close Copilot" : "Open Copilot")">
    <i class="fas @(isOpen ? "fa-chevron-down" : "fa-robot")"></i>
</button>

@* Inline overlay fallback — used when ICopilotModalService is not available (e.g. macOS AppKit) *@
@if (useInlineFallback && isOpen)
{
    <div class="copilot-overlay-backdrop" @onclick="CloseOverlay">
        <div class="copilot-overlay @(isClosing ? "closing" : "")" @onclick:stopPropagation="true">
            <button class="btn-close-inline" @onclick="CloseOverlay" title="Close">
                <i class="fas fa-times"></i>
            </button>
            <div class="overlay-content">
                <MauiSherpa.Pages.Copilot 
                    IsEmbedded="true"
                    PendingMessage="@pendingMessage"
                    PendingContext="@pendingContext"
                    OnPendingHandled="ClearPending"
                    OnReady="OnChatReady" />
            </div>
        </div>
    </div>
}

<style>
    /* Floating Action Button */
    .copilot-fab {
        position: fixed;
        bottom: 1.5rem;
        left: 1.5rem;
        width: 56px;
        height: 56px;
        border-radius: 50%;
        border: none;
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        color: white;
        font-size: 1.5rem;
        cursor: pointer;
        box-shadow: 0 0.25rem 0.75rem rgba(99, 102, 241, 0.4);
        transition: all 0.3s ease;
        z-index: 20001;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .copilot-fab.fab-hidden {
        display: none !important;
    }
    
    .copilot-fab:hover {
        transform: scale(1.1);
        box-shadow: 0 0.375rem 1.25rem rgba(99, 102, 241, 0.5);
    }
    
    .copilot-fab.overlay-open {
        background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
        box-shadow: 0 0.25rem 0.75rem rgba(79, 70, 229, 0.5);
    }
    
    .copilot-fab.overlay-open:hover {
        transform: scale(1.1) translateY(2px);
    }

    .copilot-fab.fab-linux {
        bottom: 2.5rem;
    }

    /* Inline fallback overlay styles */
    .copilot-overlay-backdrop {
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(4px);
        z-index: 20000;
        display: flex;
        align-items: flex-start;
        justify-content: flex-start;
        padding: 1rem 2.5rem 2.5rem 1rem;
        animation: fadeIn 0.2s ease;
    }
    
    @@keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }
    
    .copilot-overlay {
        width: calc(100vw - 160px);
        max-width: 900px;
        height: calc(100vh - 100px);
        max-height: 800px;
        background: var(--card-bg, #ffffff);
        border-radius: 1rem;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        display: flex;
        flex-direction: column;
        overflow: hidden;
        transform-origin: top left;
        animation: expandFromCorner 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
        position: relative;
    }
    
    .copilot-overlay.closing {
        animation: collapseToCorner 0.25s ease-in forwards;
    }
    
    @@keyframes expandFromCorner {
        from { 
            opacity: 0;
            transform: scale(0.3) translateX(-20px) translateY(-20px);
        }
        to { 
            opacity: 1;
            transform: scale(1) translateX(0) translateY(0);
        }
    }
    
    @@keyframes collapseToCorner {
        from { 
            opacity: 1;
            transform: scale(1) translateX(0) translateY(0);
        }
        to { 
            opacity: 0;
            transform: scale(0.3) translateX(-20px) translateY(-20px);
        }
    }
    
    .btn-close-inline {
        position: absolute;
        top: 0.5rem;
        right: 0.5rem;
        z-index: 10;
        background: var(--bg-tertiary, #edf2f7);
        border: none;
        color: var(--text-muted, #718096);
        width: 28px;
        height: 28px;
        border-radius: 50%;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.75rem;
        transition: all 0.2s;
        opacity: 0.7;
    }

    .btn-close-inline:hover {
        opacity: 1;
        background: var(--border-color, #e2e8f0);
    }
    
    .overlay-content {
        flex: 1;
        overflow: hidden;
        display: flex;
        flex-direction: column;
    }
    
    .theme-dark .copilot-overlay {
        background: var(--card-bg);
    }
</style>

@code {
    private bool isOpen = false;
    private bool isClosing = false;
    private string? pendingMessage;
    private CopilotContext? pendingContext;
    private bool chatReady = false;
    
    // When ICopilotModalService is registered, the modal service handles open/close
    // and this overlay only renders the FAB. Otherwise, fall back to inline rendering.
    private bool useInlineFallback = true;

    [Inject] private IServiceProvider ServiceProvider { get; set; } = default!;
    
    protected override void OnInitialized()
    {
        // Check if the modal service is available (it won't be on macOS AppKit)
        var modalService = ServiceProvider.GetService<ICopilotModalService>();
        useInlineFallback = modalService is null;
        
        if (useInlineFallback)
        {
            // Inline mode: this component manages open/close and rendering
            ContextService.OnOpenRequested += HandleOpenRequested;
            ContextService.OnCloseRequested += HandleCloseRequested;
            ContextService.OnMessageRequested += HandleMessageRequested;
            ContextService.OnContextRequested += HandleContextRequested;
        }
        // When modal service is available, it handles events directly — we just render the FAB
    }
    
    public void Dispose()
    {
        if (useInlineFallback)
        {
            ContextService.OnOpenRequested -= HandleOpenRequested;
            ContextService.OnCloseRequested -= HandleCloseRequested;
            ContextService.OnMessageRequested -= HandleMessageRequested;
            ContextService.OnContextRequested -= HandleContextRequested;
        }
    }
    
    private void HandleOpenRequested()
    {
        isClosing = false;
        isOpen = true;
        ContextService.NotifyOverlayStateChanged(true);
        InvokeAsync(StateHasChanged);
    }
    
    private void HandleCloseRequested()
    {
        CloseOverlay();
    }
    
    private void HandleMessageRequested(string message)
    {
        pendingMessage = message;
        pendingContext = null;
        InvokeAsync(StateHasChanged);
    }
    
    private void HandleContextRequested(CopilotContext context)
    {
        pendingContext = context;
        pendingMessage = null;
        InvokeAsync(StateHasChanged);
    }
    
    private void ToggleOverlay()
    {
        if (useInlineFallback)
        {
            if (isOpen)
                CloseOverlay();
            else
                OpenOverlay();
        }
        else
        {
            // Delegate to the context service → modal service handles it
            ContextService.ToggleOverlay();
        }
    }
    
    private void OpenOverlay()
    {
        isClosing = false;
        isOpen = true;
        ContextService.NotifyOverlayStateChanged(true);
    }
    
    private async void CloseOverlay()
    {
        isClosing = true;
        StateHasChanged();
        
        await Task.Delay(250);
        
        isOpen = false;
        isClosing = false;
        ContextService.NotifyOverlayStateChanged(false);
        await InvokeAsync(StateHasChanged);
    }
    
    private void OnChatReady()
    {
        chatReady = true;
    }
    
    private void ClearPending()
    {
        pendingMessage = null;
        pendingContext = null;
    }
}
