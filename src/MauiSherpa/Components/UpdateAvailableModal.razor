@using MauiSherpa.Core.Interfaces
@using Markdig
@inject IJSRuntime JS
@implements IDisposable

@if (IsVisible && UpdateResult?.LatestRelease != null)
{
    <div class="modal-backdrop" @onclick="OnDecline" id="update-modal">
        <div class="modal-content" @onclick:stopPropagation="true" role="dialog" aria-modal="true" aria-labelledby="update-modal-title">
            <div class="modal-header">
                <h2 id="update-modal-title">
                    <i class="fas fa-arrow-up"></i>
                    Update Available
                </h2>
                <button class="close-btn" @onclick="OnDecline">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            
            <div class="modal-body">
                <div class="version-info">
                    <div class="version-badge current">
                        <span class="label">Current Version</span>
                        <span class="version">v@(TruncateVersion(UpdateResult.CurrentVersion))</span>
                    </div>
                    <span class="version-arrow"><i class="fas fa-arrow-right"></i></span>
                    <div class="version-badge new">
                        <span class="label">New Version</span>
                        <span class="version">@(UpdateResult.LatestRelease.TagName)</span>
                    </div>
                </div>
                
                <div class="release-notes">
                    <div class="release-notes-header">
                        <h4>What's New</h4>
                        <span class="release-date">
                            <i class="far fa-calendar"></i>
                            @UpdateResult.LatestRelease.PublishedAt.ToString("MMM dd, yyyy")
                        </span>
                    </div>
                    <div class="notes-content">
                        @((MarkupString)ConvertMarkdownToHtml(UpdateResult.LatestRelease.Body))
                    </div>
                </div>
            </div>
            
            <div class="modal-footer">
                @if (isUpdating)
                {
                    <div class="update-progress">
                        <div class="progress-bar-container">
                            <div class="progress-bar-fill" style="width: @progressPercent.ToString("F0")%"></div>
                        </div>
                        <span class="progress-text">@progressMessage</span>
                    </div>
                }
                else
                {
                    <button class="btn btn-secondary" @onclick="OnDecline">
                        <i class="fas fa-times"></i>
                        Not Now
                    </button>
                    <button class="btn btn-secondary" @onclick="OnAccept">
                        <i class="fas fa-external-link-alt"></i>
                        Download
                    </button>
                    @if (OperatingSystem.IsMacCatalyst() || OperatingSystem.IsMacOS())
                    {
                        <button class="btn btn-primary" @onclick="HandleAutoUpdate">
                            <i class="fas fa-download"></i>
                            Download &amp; Install
                        </button>
                    }
                }
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public UpdateCheckResult? UpdateResult { get; set; }
    
    [Parameter]
    public EventCallback OnAccept { get; set; }
    
    [Parameter]
    public EventCallback OnDecline { get; set; }
    
    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public EventCallback OnAutoUpdate { get; set; }

    private DotNetObjectReference<UpdateAvailableModal>? _dotNetRef;
    private bool _modalInitialized;
    private bool isUpdating;
    private double progressPercent;
    private string progressMessage = "";

    protected override void OnInitialized()
    {
        _dotNetRef = DotNetObjectReference.Create(this);
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (IsVisible && !_modalInitialized)
        {
            _modalInitialized = true;
            await JS.InvokeVoidAsync("modalInterop.initialize", "update-modal", _dotNetRef);
        }
        else if (!IsVisible && _modalInitialized)
        {
            _modalInitialized = false;
            await JS.InvokeVoidAsync("modalInterop.dispose", "update-modal");
        }
    }

    [JSInvokable]
    public async Task OnEscapePressed()
    {
        await OnDecline.InvokeAsync();
    }
    
    private static string TruncateVersion(string version)
    {
        var plusIndex = version.IndexOf('+');
        if (plusIndex >= 0 && version.Length > plusIndex + 8)
            return version[..(plusIndex + 9)];
        return version;
    }

    private string ConvertMarkdownToHtml(string markdown)
    {
        if (string.IsNullOrWhiteSpace(markdown))
            return "<p>No release notes available.</p>";
        
        var pipeline = new Markdig.MarkdownPipelineBuilder()
            .UseAdvancedExtensions()
            .DisableHtml()
            .Build();
        
        return Markdig.Markdown.ToHtml(markdown, pipeline);
    }

    private async Task HandleAutoUpdate()
    {
        isUpdating = true;
        progressPercent = 0;
        progressMessage = "Preparing...";
        StateHasChanged();
        await OnAutoUpdate.InvokeAsync();
    }

    public void UpdateProgress(double percent, string message)
    {
        progressPercent = percent;
        progressMessage = message;
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        if (_modalInitialized)
            _ = JS.InvokeVoidAsync("modalInterop.dispose", "update-modal");
        _dotNetRef?.Dispose();
    }
}

<style>
