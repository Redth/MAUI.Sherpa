@page "/"
@using MauiSherpa.Core.ViewModels
@using MauiSherpa.Core.Interfaces
@using MauiSherpa.Core.Services
@using Markdig
@implements IDisposable
@inject DashboardViewModel ViewModel
@inject ICopilotContextService CopilotContext
@inject IToolbarService ToolbarService
@inject IPlatformService PlatformInfo
@inject IAdbDeviceWatcherService AdbWatcher
@inject ISimulatorService SimulatorService
@inject IUpdateService UpdateService
@inject NavigationManager Navigation

<h1><i class="fas fa-home"></i> @ViewModel.Title</h1>
<p class="welcome">@ViewModel.WelcomeMessage</p>

@if (!PlatformInfo.HasNativeToolbar)
{
    <div class="quick-actions">
        <a href="doctor" class="action-btn doctor">
            <i class="fas fa-stethoscope action-icon"></i>
            <span>Doctor</span>
        </a>
        <a href="settings" class="action-btn settings">
            <i class="fas fa-cog action-icon"></i>
            <span>Settings</span>
        </a>
        <button class="action-btn copilot" @onclick="OpenCopilot">
            <i class="fas fa-robot action-icon"></i>
            <span>Copilot</span>
        </button>
    </div>
}

@* Connected Devices & Simulators *@
<div class="devices-section">
    <h2><i class="fas fa-plug"></i> Connected Devices</h2>
    <div class="devices-grid">
        @{
            var physicalDevices = AdbWatcher.Devices?.Where(d => !d.IsEmulator && d.State == "device").ToList() ?? new();
            var runningEmulators = AdbWatcher.Devices?.Where(d => d.IsEmulator && d.State == "device").ToList() ?? new();
        }

        @foreach (var device in physicalDevices)
        {
            <div class="device-card">
                <div class="device-card-icon android"><i class="fas fa-mobile-alt"></i></div>
                <div class="device-card-info">
                    <div class="device-card-name">@(device.Model ?? device.Serial)</div>
                    <div class="device-card-detail">Android Device</div>
                </div>
                <button class="device-card-action" @onclick='() => Navigation.NavigateTo($"/devices?serial={device.Serial}")' title="Inspect">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        }

        @foreach (var emu in runningEmulators)
        {
            <div class="device-card">
                <div class="device-card-icon emulator"><i class="fas fa-desktop"></i></div>
                <div class="device-card-info">
                    <div class="device-card-name">@(emu.Model ?? emu.Serial)</div>
                    <div class="device-card-detail">Android Emulator</div>
                </div>
                <button class="device-card-action" @onclick='() => Navigation.NavigateTo($"/devices?serial={emu.Serial}")' title="Inspect">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        }

        @if (SimulatorService.IsSupported && bootedSimulators != null)
        {
            @foreach (var sim in bootedSimulators)
            {
                <div class="device-card">
                    <div class="device-card-icon simulator"><i class="fas fa-tablet-alt"></i></div>
                    <div class="device-card-info">
                        <div class="device-card-name">@sim.Name</div>
                        <div class="device-card-detail">@(sim.Runtime ?? "iOS Simulator")</div>
                    </div>
                    <button class="device-card-action" @onclick='() => Navigation.NavigateTo($"/apple-simulators?udid={sim.Udid}")' title="Inspect">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            }
        }

        @if (physicalDevices.Count == 0 && runningEmulators.Count == 0 && (bootedSimulators == null || bootedSimulators.Count == 0))
        {
            <div class="devices-empty">
                <i class="fas fa-plug"></i>
                <span>No devices connected or simulators running</span>
            </div>
        }
    </div>
</div>

@* Release Notes *@
<div class="release-notes-section">
    <h2><i class="fas fa-mountain"></i> Release Notes</h2>
    @if (releases == null || releases.Count == 0)
    {
        <p class="text-muted">Loading release notes...</p>
    }
    else
    {
        @foreach (var release in releases.Take(5))
        {
            <div class="release-card">
                <div class="release-header" @onclick="() => ToggleRelease(release.TagName)">
                    <div class="release-info">
                        <span class="release-tag">@release.TagName</span>
                        @if (release.IsPrerelease)
                        {
                            <span class="release-prerelease">pre-release</span>
                        }
                        <span class="release-date">@release.PublishedAt.ToString("MMM d, yyyy")</span>
                    </div>
                    <i class="fas @(expandedReleases.Contains(release.TagName) ? "fa-chevron-up" : "fa-chevron-down") release-toggle"></i>
                </div>
                @if (expandedReleases.Contains(release.TagName))
                {
                    <div class="release-body">
                        @((MarkupString)ConvertMarkdownToHtml(release.Body))
                    </div>
                }
            </div>
        }
    }
</div>

