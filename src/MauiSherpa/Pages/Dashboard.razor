@page "/"
@using MauiSherpa.Core.ViewModels
@using MauiSherpa.Core.Interfaces
@using MauiSherpa.Core.Services
@using Markdig
@implements IDisposable
@inject DashboardViewModel ViewModel
@inject ICopilotContextService CopilotContext
@inject IToolbarService ToolbarService
@inject IPlatformService PlatformInfo
@inject IAndroidSdkService AndroidSdk
@inject IOpenJdkSettingsService JdkSettings
@inject IAdbDeviceWatcherService AdbWatcher
@inject ISimulatorService SimulatorService
@inject IUpdateService UpdateService
@inject NavigationManager Navigation

<h1><i class="fas fa-home"></i> @ViewModel.Title</h1>
<p class="welcome">@ViewModel.WelcomeMessage</p>

@if (!PlatformInfo.HasNativeToolbar)
{
    <div class="quick-actions">
        <a href="doctor" class="action-btn doctor">
            <i class="fas fa-stethoscope action-icon"></i>
            <span>Doctor</span>
        </a>
        <a href="settings" class="action-btn settings">
            <i class="fas fa-cog action-icon"></i>
            <span>Settings</span>
        </a>
        <button class="action-btn copilot" @onclick="OpenCopilot">
            <i class="fas fa-robot action-icon"></i>
            <span>Copilot</span>
        </button>
    </div>
}

@* At a Glance Card *@
<div class="card glance-card">
    <div class="card-header">
        <i class="fas fa-tachometer-alt card-icon"></i>
        <h3>At a Glance</h3>
    </div>
    <div class="glance-grid">
        <div class="glance-item" @onclick='() => Navigation.NavigateTo("/android-sdk")'>
            <div class="glance-label"><i class="fab fa-android"></i> Android SDK</div>
            <div class="glance-value @(AndroidSdk.IsSdkInstalled ? "" : "text-muted")">
                @(AndroidSdk.IsSdkInstalled ? TruncatePath(AndroidSdk.SdkPath) : "Not installed")
            </div>
        </div>
        <div class="glance-item" @onclick='() => Navigation.NavigateTo("/settings")'>
            <div class="glance-label"><i class="fas fa-coffee"></i> OpenJDK</div>
            <div class="glance-value @(jdkPath != null ? "" : "text-muted")">
                @(jdkPath != null ? TruncatePath(jdkPath) : "Not configured")
            </div>
        </div>
        <div class="glance-item" @onclick='() => Navigation.NavigateTo("/devices")'>
            <div class="glance-label"><i class="fas fa-mobile-alt"></i> Android Devices</div>
            <div class="glance-value">
                @{
                    var physicalDevices = AdbWatcher.Devices?.Where(d => !d.IsEmulator && d.State == "device").ToList();
                    var emulators = AdbWatcher.Devices?.Where(d => d.IsEmulator && d.State == "device").ToList();
                }
                @if ((physicalDevices?.Count ?? 0) == 0 && (emulators?.Count ?? 0) == 0)
                {
                    <span class="text-muted">None connected</span>
                }
                else
                {
                    @if (physicalDevices?.Count > 0)
                    {
                        <span class="device-badge"><i class="fas fa-mobile-alt"></i> @physicalDevices.Count physical</span>
                    }
                    @if (emulators?.Count > 0)
                    {
                        <span class="device-badge emulator"><i class="fas fa-desktop"></i> @emulators.Count emulator@(emulators.Count > 1 ? "s" : "")</span>
                    }
                }
            </div>
        </div>
        @if (SimulatorService.IsSupported)
        {
            <div class="glance-item" @onclick='() => Navigation.NavigateTo("/simulators")'>
                <div class="glance-label"><i class="fas fa-tablet-alt"></i> iOS Simulators</div>
                <div class="glance-value">
                    @if (bootedSimulators == null)
                    {
                        <span class="text-muted">Loading...</span>
                    }
                    else if (bootedSimulators.Count == 0)
                    {
                        <span class="text-muted">None running</span>
                    }
                    else
                    {
                        @foreach (var sim in bootedSimulators.Take(3))
                        {
                            <span class="device-badge simulator"><i class="fas fa-tablet-alt"></i> @sim.Name</span>
                        }
                        @if (bootedSimulators.Count > 3)
                        {
                            <span class="text-muted">+@(bootedSimulators.Count - 3) more</span>
                        }
                    }
                </div>
            </div>
        }
    </div>
</div>

@* Release Notes *@
<div class="release-notes-section">
    <h2><i class="fas fa-mountain"></i> Release Notes</h2>
    @if (releases == null || releases.Count == 0)
    {
        <p class="text-muted">Loading release notes...</p>
    }
    else
    {
        @foreach (var release in releases.Take(5))
        {
            <div class="release-card">
                <div class="release-header" @onclick="() => ToggleRelease(release.TagName)">
                    <div class="release-info">
                        <span class="release-tag">@release.TagName</span>
                        @if (release.IsPrerelease)
                        {
                            <span class="release-prerelease">pre-release</span>
                        }
                        <span class="release-date">@release.PublishedAt.ToString("MMM d, yyyy")</span>
                    </div>
                    <i class="fas @(expandedReleases.Contains(release.TagName) ? "fa-chevron-up" : "fa-chevron-down") release-toggle"></i>
                </div>
                @if (expandedReleases.Contains(release.TagName))
                {
                    <div class="release-body">
                        @((MarkupString)ConvertMarkdownToHtml(release.Body))
                    </div>
                }
            </div>
        }
    }
</div>

