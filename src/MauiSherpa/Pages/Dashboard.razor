@code {
    private string? jdkPath;
    private List<SimulatorDevice>? bootedSimulators;
    private IReadOnlyList<GitHubRelease>? releases;
    private HashSet<string> expandedReleases = new();

    private static readonly string CacheFilePath = Path.Combine(
        AppDataPath.GetAppDataDirectory(), "releases-cache.json");

    protected override void OnInitialized()
    {
        ToolbarService.SetItems(
            new ToolbarAction("doctor", "Doctor", "fa-stethoscope"),
            new ToolbarAction("settings", "Settings", "fa-cog")
        );
        ToolbarService.ToolbarItemClicked += OnToolbarItemClicked;

        // Load cached releases immediately
        LoadCachedReleases();

        // Expand the first release by default
        if (releases?.Count > 0)
            expandedReleases.Add(releases[0].TagName);
    }

    protected override async Task OnInitializedAsync()
    {
        // Load at-a-glance data
        jdkPath = await JdkSettings.GetEffectiveJdkPathAsync();

        if (SimulatorService.IsSupported)
        {
            try
            {
                var allSims = await SimulatorService.GetSimulatorsAsync();
                bootedSimulators = allSims.Where(s => s.State == "Booted").ToList();
            }
            catch
            {
                bootedSimulators = new List<SimulatorDevice>();
            }
        }

        // Refresh releases in background
        await RefreshReleasesAsync();
    }

    private void OnToolbarItemClicked(string actionId)
    {
        switch (actionId)
        {
            case "doctor":
                Navigation.NavigateTo("/doctor");
                break;
            case "settings":
                Navigation.NavigateTo("/settings");
                break;
        }
    }

    private void LoadCachedReleases()
    {
        try
        {
            if (File.Exists(CacheFilePath))
            {
                var json = File.ReadAllText(CacheFilePath);
                releases = System.Text.Json.JsonSerializer.Deserialize<List<GitHubRelease>>(json);
            }
        }
        catch
        {
            // Ignore cache read errors
        }
    }

    private async Task RefreshReleasesAsync()
    {
        try
        {
            var freshReleases = await UpdateService.GetAllReleasesAsync();
            if (freshReleases?.Count > 0)
            {
                var newestCached = releases?.FirstOrDefault()?.TagName;
                var newestFresh = freshReleases[0].TagName;

                releases = freshReleases;

                // Expand first release if nothing is expanded
                if (expandedReleases.Count == 0)
                    expandedReleases.Add(releases[0].TagName);

                // Save to cache
                try
                {
                    var json = System.Text.Json.JsonSerializer.Serialize(releases);
                    await File.WriteAllTextAsync(CacheFilePath, json);
                }
                catch { /* ignore cache write errors */ }

                await InvokeAsync(StateHasChanged);
            }
        }
        catch
        {
            // Keep cached data if fetch fails
        }
    }

    private void ToggleRelease(string tagName)
    {
        if (!expandedReleases.Remove(tagName))
            expandedReleases.Add(tagName);
    }

    private string ConvertMarkdownToHtml(string? markdown)
    {
        if (string.IsNullOrWhiteSpace(markdown))
            return "<p>No release notes available.</p>";

        var pipeline = new MarkdownPipelineBuilder()
            .UseAdvancedExtensions()
            .DisableHtml()
            .Build();

        return Markdig.Markdown.ToHtml(markdown, pipeline);
    }

    private static string TruncatePath(string? path)
    {
        if (string.IsNullOrEmpty(path)) return "Unknown";
        var home = Environment.GetFolderPath(Environment.SpecialFolder.UserProfile);
        if (path.StartsWith(home))
            return "~" + path[home.Length..];
        return path;
    }

    public void Dispose()
    {
        ToolbarService.ToolbarItemClicked -= OnToolbarItemClicked;
    }

    private void OpenCopilot()
    {
        CopilotContext.OpenOverlay();
    }
}
